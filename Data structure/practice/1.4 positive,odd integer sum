def positive_integer_sum(n):  #3a
    sum=0
    for i in range(1,n):
        sum += i**2
    return sum
# print(positive_integer_sum(6))

n=int(input())  #3b

summation=sum([i**2 for i in range(0,n)])
print(summation)

#or
